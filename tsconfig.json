{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["src/CubismSdk/Framework/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/CubismSdk/Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
